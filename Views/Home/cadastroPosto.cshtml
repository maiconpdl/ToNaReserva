@model Models.Posto
<html>
    <head>

        <link rel="stylesheet" href="../lib/estilo.css"/>
        <link rel="stylesheet" href="../lib/cadProdutos.css"/>
        <script type="text/javascript" src="../jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="../bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="../lib/Index.js"></script>

    </head>
    <body style="background-color: #e5d675;">


        <div class="divForm">
            
            <form asp-action="CadastroPosto">
                <div>
                    <input asp-for="nome" type="text" placeholder="NOME" id="nomePosto"/>
                    <input asp-for="telefone" type="text" placeholder="TELEFONE" id="telefonePosto"/>
                    <input asp-for="pais" type="text" placeholder="PAÍS" id="paisPosto"/>
                    <input asp-for="estado" type="text" placeholder="ESTADO" id="estadoPosto"/>
                    <input asp-for="cidade" type="text" placeholder="CIDADE" id="cidadePosto"/>
                    <input asp-for="cep" type="text" placeholder="CEP" id="cepPosto"/>
                    <input asp-for="bairro" type="text" placeholder="BAIRRO" id="bairroPosto"/>
                    <input asp-for="rua" type="text" placeholder="RUA" id="ruaPosto"/>
                    <input asp-for="numero" type="text" placeholder="NÚMERO" id="numeroPosto"/>
                   
                    
                </div>

						<input type="submit" value="SALVAR"/>
					
			</form>
        </div>
    </body>
</html>