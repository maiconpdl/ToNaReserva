@model IEnumerable<Models.Posto>

<html>
    <head>
        <link rel="stylesheet" href="lib/Index.css"/>
        <link rel="stylesheet" href="lib/estilo.css"/>
        <link href="ToNaReserva.style.css" rel="stylesheet">
        <link rel="stylesheet" href="lib/fontawesome-free-6.1.1-web/css/all.css"/>
        <script type="text/javascript" src="lib/jquery-3.6.0.min.js"></script>
        <script type="text/javascript" src="./bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="lib/Index.js"></script>

    </head>
    <body style="background-color: #e5d675;">


        <div class="divForm">


    @foreach (var item in Model)
{
                <div style="text-align: left; margin: 30px; width: 100%; height: 120px; background-color: white; border-radius: 5px;">
                       <a asp-action="Posto">
                            <div style="text-align: center  ; font-size: 20px; font-weight: 700;">
                                
                                @Html.DisplayFor(modelItem => item.nome)
                                <div class="col-md-2" style="color: yellow; font-size: 25px; margin-left: auto; display: inline;">&#10025;&#10025;&#10025;&#10025;&#10025;</div>
                            </div>
                       </a>
                    <div style="display: inline;">
                        <table>
                            <tr>
                                <td>
                                    <tr>                                
                                        <td>
                                            <div>                                        
                                                Gasolina:@Html.DisplayFor(modelItem => item.gasolina)
                                            </div>
                                        </td>
                                    </tr>
                                    <tr> 
                                                                    
                                        <td>
                                            <div>                                        
                                                Etanol:@Html.DisplayFor(modelItem => item.etanol)
                                            </div>
                                        </td>
                                        
                                    </tr>
                                    <tr>                                
                                        <td>
                                            <div class="col-md-10" style="display: inline;">Diesel:@Html.DisplayFor(modelItem => item.diesel)</div>
                                            
                                        </td>
                                    </tr>
                                </td>

                            </tr>
                        </table>
                    </div>
                </div>
                   
}



        </div>
                
        </div>
    </body>
</html>