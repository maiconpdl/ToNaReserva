@model Models.Usuario
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<html>
    <head>

        <script type="text/javascript" src="../jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="../bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="../lib/Index.js"></script>

    </head>
    <body style="background-color: #e5d675;">


        <div class="divForm">
            
            <form asp-action="CadastroUsuario">
                <div>
                    <select asp-for="tipo">
                        <option value="Cliente">Cliente</option>
                        <option value="Posto">Posto</option>
                    </select>
                    <input asp-for="nome" type="text" placeholder="NOME" id="nome"/>
                    <input asp-for="email" type="email" placeholder="E-MAIL" id="email"/>
                    <input asp-for="cpfcnpj" type="text" placeholder="CPF" id="cpf"/>
                    <input asp-for="cep" type="text" placeholder="CEP" id="cep"/>
                    <input asp-for="cidade" type="text" placeholder="CIDADE" id="cidade"/>
                    <input asp-for="bairro" type="text" placeholder="BAIRRO" id="bairro"/>
                    <input asp-for="rua" type="text" placeholder="RUA" id="rua"/>
                    <input asp-for="numero" type="text" placeholder="NÚMERO" id="numero"/>
                    <input asp-for="senha" type="password" placeholder="SENHA" id="senha"/>
                    <input type="password" placeholder="CONFIRMAR SENHA" id="confirmaSenha"/>
                </div>

						<input type="submit" value="CADASTRAR"/>
					
			</form>
        </div>
    </body>
</html>