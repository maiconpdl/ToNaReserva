@model Models.Usuario

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <script type="text/javascript" src="jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="lib/login.js"></script>
        
    </head>
    <body style="background-color: #e5d675;">            
        <div id="divForm">
            <form asp-action="VerificaUsuario" id="formLogin" method="POST" onsubmit="validar(this); return false;">
                @if (ViewBag.Alerta != "")
                {
                    <label style="color: red;">@ViewBag.Alerta</label>
                    
                }
                <input asp-for="email" placeholder="Usuário" id="email" name="email" type="email">
                <input asp-for="senha" placeholder="Senha" id="senha" name="senha" type="password">
                <a asp-action="CadastroUsuario">Não sou cadastrado!</a>
                <a href="#">Esqueci a senha!</a>
                
                <input value="Entrar" type="submit"/>
            </form>
           
              
        </div>

    </body>
</html>